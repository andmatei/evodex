<?xml version="1.0"?>
<robot name="Robot">

  <!-- Base Link -->
  <link name="base">
    <inertial>
      <mass value="{{ config.base.mass }}"/>
      <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1" />
    </inertial>
    <collision>
      <geometry>
        <box size="{{ config.base.width / 100 }} {{ config.base.height / 100 }} 0.1"/>
      </geometry>
    </collision>
    <visual>
      <geometry>
        <box size="{{ config.base.width / 100 }} {{ config.base.height / 100 }} 0.1"/>
      </geometry>
    </visual>
  </link>

  <!-- Loop through each finger to generate its links and joints -->
  {% for finger in config.fingers %}
    {% set parent_link = 'base' %}
    {% for segment in finger.segments %}
      {% set link_name = 'finger_' ~ loop.parent.index ~ '_segment_' ~ loop.index0 %}
      {% set joint_name = 'joint_' ~ loop.parent.index ~ '_' ~ loop.index0 %}

      <!-- Segment Link -->
      <link name="{{ link_name }}">
        <inertial>
          <mass value="{{ segment.mass }}"/>
          <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1" />
        </inertial>
        <collision>
          <geometry>
            <box size="{{ segment.width / 100 }} {{ segment.length / 100 }} 0.1"/>
          </geometry>
        </collision>
        <visual>
          <geometry>
            <box size="{{ segment.width / 100 }} {{ segment.length / 100 }} 0.1"/>
          </geometry>
        </visual>
      </link>

      <!-- Revolute Joint -->
      <joint name="{{ joint_name }}" type="revolute">
        <parent link="{{ parent_link }}"/>
        <child link="{{ link_name }}"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="{{ segment.joint_angle_limit[0] }}" upper="{{ segment.joint_angle_limit[1] }}" effort="100" velocity="10"/>
      </joint>

      {% set parent_link = link_name %}
    {% endfor %}
  {% endfor %}

</robot>