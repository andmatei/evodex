<?xml version="1.0"?>
<robot name="five_finger_gripper">

  <!-- Base -->
  <link name="base">
    <inertial>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.001" ixy="0" ixz="0"
               iyy="0.001" iyz="0"
               izz="0.001"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.1"/>
      </geometry>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.1"/>
      </geometry>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
    </collision>
  </link>

  <!-- Helper macro to define a finger segment -->
  <!-- proximal, medial, distal links and joints for each finger -->
  <!-- Finger placement will be around the base in XY plane -->
  
  <!-- Finger 1 -->
  <link name="finger1_proximal">
    <inertial>
      <origin xyz="0 0 0.025"/>
      <mass value="0.05"/>
      <inertia ixx="1e-5" iyy="1e-5" izz="1e-5"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.01" length="0.05"/>
      </geometry>
      <origin xyz="0 0 0.025"/>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.01" length="0.05"/>
      </geometry>
      <origin xyz="0 0 0.025"/>
    </collision>
  </link>

  <joint name="joint_base_to_finger1_proximal" type="revolute">
    <parent link="base"/>
    <child link="finger1_proximal"/>
    <origin xyz="0.05 0 0.1"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="5" velocity="1"/>
  </joint>

  <link name="finger1_medial">
    <inertial>
      <origin xyz="0 0 0.02"/>
      <mass value="0.03"/>
      <inertia ixx="5e-6" iyy="5e-6" izz="5e-6"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.008" length="0.04"/>
      </geometry>
      <origin xyz="0 0 0.02"/>
      <material name="green">
        <color rgba="0 1 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.008" length="0.04"/>
      </geometry>
      <origin xyz="0 0 0.02"/>
    </collision>
  </link>

  <joint name="joint_finger1_proximal_to_medial" type="revolute">
    <parent link="finger1_proximal"/>
    <child link="finger1_medial"/>
    <origin xyz="0 0 0.05"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="5" velocity="1"/>
  </joint>

  <link name="finger1_distal">
    <inertial>
      <origin xyz="0 0 0.015"/>
      <mass value="0.02"/>
      <inertia ixx="2e-6" iyy="2e-6" izz="2e-6"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.006" length="0.03"/>
      </geometry>
      <origin xyz="0 0 0.015"/>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.006" length="0.03"/>
      </geometry>
      <origin xyz="0 0 0.015"/>
    </collision>
  </link>

  <joint name="joint_finger1_medial_to_distal" type="revolute">
    <parent link="finger1_medial"/>
    <child link="finger1_distal"/>
    <origin xyz="0 0 0.04"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="5" velocity="1"/>
  </joint>

  <!-- Finger 2 (mirrored position on base) -->
  <link name="finger2_proximal">
    <inertial>
      <origin xyz="0 0 0.025"/>
      <mass value="0.05"/>
      <inertia ixx="1e-5" iyy="1e-5" izz="1e-5"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.01" length="0.05"/>
      </geometry>
      <origin xyz="0 0 0.025"/>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.01" length="0.05"/>
      </geometry>
      <origin xyz="0 0 0.025"/>
    </collision>
  </link>

  <joint name="joint_base_to_finger2_proximal" type="revolute">
    <parent link="base"/>
    <child link="finger2_proximal"/>
    <origin xyz="0.05 0.03 0.1"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="5" velocity="1"/>
  </joint>

  <link name="finger2_medial">
    <inertial>
      <origin xyz="0 0 0.02"/>
      <mass value="0.03"/>
      <inertia ixx="5e-6" iyy="5e-6" izz="5e-6"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.008" length="0.04"/>
      </geometry>
      <origin xyz="0 0 0.02"/>
      <material name="green">
        <color rgba="0 1 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.008" length="0.04"/>
      </geometry>
      <origin xyz="0 0 0.02"/>
    </collision>
  </link>

  <joint name="joint_finger2_proximal_to_medial" type="revolute">
    <parent link="finger2_proximal"/>
    <child link="finger2_medial"/>
    <origin xyz="0 0 0.05"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="5" velocity="1"/>
  </joint>

  <link name="finger2_distal">
    <inertial>
      <origin xyz="0 0 0.015"/>
      <mass value="0.02"/>
      <inertia ixx="2e-6" iyy="2e-6" izz="2e-6"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.006" length="0.03"/>
      </geometry>
      <origin xyz="0 0 0.015"/>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.006" length="0.03"/>
      </geometry>
      <origin xyz="0 0 0.015"/>
    </collision>
  </link>

  <joint name="joint_finger2_medial_to_distal" type="revolute">
    <parent link="finger2_medial"/>
    <child link="finger2_distal"/>
    <origin xyz="0 0 0.04"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="5" velocity="1"/>
  </joint>

  <!-- Fingers 3 and 4 would mirror Fingers 1 and 2 with adjusted base positions -->
  <!-- Thumb would be angled differently, e.g., rotated -45 degrees in XY plane -->

</robot>
